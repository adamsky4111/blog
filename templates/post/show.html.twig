{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}


    <h1>Post</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <td><img src='{{ asset("uploads/img/" ~ post.img)}}' class="img-rounded"/>
        </tr>
        <tr>
            <td>{{ post.description }}</td>
        </tr>
        <tr>
            <th>{{ post.body }}</th>
        </tr>
        {% if post.updatedDate is not null%}
        <tr>
            <th>last modify</th>
            <th>{{ post.updatedDate ? post.updatedDate|date('Y-m-d') : '' }}</th>
        </tr>
        {% endif %}
        <tr>
            <th>created at</th>
            <td>{{ post.creationDate ? post.creationDate|date('Y-m-d') : '' }}</td>
        </tr>

        </tbody>
    </table>
    <br>
    {% for comment in post.comments %}
        {{ comment.author }}:
        {{ comment.description }} <br>
        {{ post.creationDate ? comment.creationDate|date('Y-m-d') : '' }} <br>

    {% endfor %}

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    <a href="{{ path('comment_new', {'id': post.id}) }}">add comment</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
