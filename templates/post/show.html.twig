{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ post.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ post.description }}</td>
        </tr>
        <tr>
            <th>CreationDate</th>
            <td>{{ post.creationDate ? post.creationDate|date('Y-m-d') : '' }}</td>
        </tr>
        </tbody>
    </table>
    <br>
    {% for comment in post.comments %}
        {{ comment.author }}:
        {{ comment.description }} <br>
        {{ post.creationDate ? comment.creationDate|date('Y-m-d') : '' }} <br>

    {% endfor %}

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    <a href="{{ path('comment_new', {'id': post.id}) }}">add comment</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
